<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.evgeny.lebedev.themovies">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".View.AuthenticationActivity" />
        <activity android:name=".View.DashboardActivity" />
        <activity android:name=".View.MovieActivity" />
        <activity android:name=".View.ListOfMoviesActivity" />
        <activity android:name=".View.SearchMovieActivity" />
        <activity android:name=".View.PersonActivity"></activity>
    </application>

</manifest>